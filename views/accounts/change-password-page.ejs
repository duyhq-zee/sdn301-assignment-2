<%- include('../partials/head.ejs') %>
		<link rel="stylesheet" href="/styles/css/nations.css">
		<link rel="stylesheet" href="/styles/css/players.css">
	</head>

	<body>
		<%- include('../partials/navbar.ejs') %>

      <main>
        <form class="login-form mt-4 d-flex flex-column align-items-center" action="/accounts/change-password/<%= user._id %>"
          method="POST">
          <% if (errorMessage) { %>
            <div class="error-message mb-3">
              <%= errorMessage %>
            </div>
            <% } %>
              <div class="w-50 mt-3">
                <label class="d-block" for="old-password">Mật khẩu cũ</label>
                <input class="d-block w-100 mt-1" type="password" name="oldPassword" id="oldPassword">
              </div>
              <div class="w-50 mt-3">
                <label class="d-block" for="password">Mật khẩu</label>
                <input class="d-block w-100 mt-1" type="password" name="password" id="password">
              </div>
              <div class="w-50 mt-3">
                <label class="d-block" for="confirmPassword">Xác nhận mật khẩu</label>
                <input class="d-block w-100 mt-1" type="password" name="confirmPassword" id="confirmPassword">
              </div>
              <button class="btn btn-primary mt-4 w-25" type="submit">Cập nhật</button>
        </form>
      </main>
	</body>
</html>