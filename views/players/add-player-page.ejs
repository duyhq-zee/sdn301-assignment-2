<%- include('../partials/head.ejs') %>
		<link rel="stylesheet" href="/styles/css/player-detail.css">
	</head>

	<body>
		<%- include('../partials/navbar.ejs') %>

			<main>
				<div class="main-container container-fluid mt-4">
          <div class="row w-100 m-0">

            <div class="col-8 container-fluid content">
              <form action="/players/add-player/" method="POST" class="d-flex flex-column align-items-end">
                <div class="player-property row w-100">
                  <h3 class="col-4">Tên</h3>
                  <input type="text" class="col-7" name="name" required/>
                  <input type="checkbox" name="isCaptain" id="" class="col-1" value="true" data-bs-toggle="tooltip" data-bs-placement="top" title="Cầu thủ này là đội trưởng?">
                </div>
                
                <div class="player-property row w-100">
                  <h3 class="col-4">Câu lạc bộ</h3>
                  <!-- <input type="text" class="col-8" name="club"  /> -->
                  <div class="col-8 p-0">
                    <select class="w-100 h-100" name="club" id="club">
                      <option value="Manchester City">Manchester City</option>
                      <option value="Manchester United">Manchester United</option>
                      <option value="Liverpool">Liverpool</option>
                    </select>
                  </div>
                </div>
                <div class="player-property row w-100">
                  <h3 class="col-4">Quốc tịch</h3>
                  <!-- <input type="text" class="col-8" name="nation" required /> -->
                  <div class="col-8 p-0">
                    <select class="w-100 h-100" name="nation" id="">
                      <% nations.map((nation) => { %>
                        <option value="<%= nation.name %>"><%= nation.name %></option>
                      <% }) %>
  
                    </select>
                  </div>
                </div>
                <div class="player-property row w-100">
                  <h3 class="col-4">Vị trí</h3>
                  <!-- <input type="text" class="col-8" name="position" /> -->
                  <div class="col-8 p-0">
                    <select class="w-100 h-100" name="position" id="position">
                      <option value="Thủ môn">Thủ môn</option>
                      <option value="Trung vệ">Trung vệ</option>
                      <option value="Hậu vệ quét">Hậu vệ quét</option>
                      <option value="Hậu vệ cánh">Hậu vệ cánh</option>
                      <option value="Hậu vệ cánh tấn công">Hậu vệ cánh tấn công</option>
                      <option value="Tiền vệ">Tiền vệ</option>
                      <option value="Tiền vệ phòng ngự">Tiền vệ phòng ngự</option>
                      <option value="Tiền vệ trung tâm">Tiền vệ trung tâm</option>
                      <option value="Tiền vệ chạy cánh">Tiền vệ chạy cánh</option>
                      <option value="Tiền vệ tấn công">Tiền vệ tấn công</option>
                      <option value="Tiền đạo cắm">Tiền đạo cắm</option>
                      <option value="Tiền đạo trung tâm">Tiền đạo trung tâm</option>
                      <option value="Hộ công">Hộ công</option>
                      <option value="Tiền đạo cánh">Tiền đạo cánh</option>
                    </select>
                  </div>
                </div>
                <div class="player-property row w-100">
                  <h3 class="col-4">Số bàn thắng</h3>
                  <input type="text" class="col-8" name="goals" />
                </div>
                <div class="player-property row w-100">
                  <h3 class="col-4">URL hình ảnh</h3>
                  <input type="text" class="col-8" name="imageUrl" />
                </div>
                <button class="btn btn-primary mt-4">Thêm</button>
              </form>
            </div>
          </div>
        </div>
			</main>
      <%- include('../partials/tooltip.ejs') %>
	</body>
</html>